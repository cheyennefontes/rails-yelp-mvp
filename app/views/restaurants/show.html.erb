<p style="color: green"><%= notice %></p>
<div id="restaurants" class="container m-4 p-3">
<%= render @restaurant %>
  <p><strong>Reviews</strong></p>
<h1>New review</h1>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit "Submit review", class: "btn btn-primary" %>
<% end %>
<br>
<%= link_to "Back to restaurants", restaurants_path %>
    <ul class="list-group">
    <% @restaurant.reviews.reverse.each do |review| %>
      <li class="list-group-item">
        <%= review.content %>
        <br>Avaliação:
        <%= review.rating %>
        <br>
        <%= link_to "Delete",
        review_path(review),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
        %>
      </li>
      <% end %>
    </ul>
  <br>
<div class="container m-4 p-3 d-flex justify-content-between" >
  <%= link_to "Edit this restaurant", edit_restaurant_path(@restaurant) %> |
  <%= link_to "Back to restaurants", restaurants_path %>
  <%= button_to "Destroy this restaurant", @restaurant, method: :delete %>
</div>
</div>

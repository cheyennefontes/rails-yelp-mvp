<p style="color: green"><%= notice %></p>
<div id="restaurants" class="container m-4 p-3">
<%= render @restaurant %>
  <p><strong>Reviews</strong></p>
  <p><%=link_to "add review", new_restaurant_review_path(@restaurant)%></p>
    <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item">
        <%= review.content %>
        <br>Avaliação:
        <%= review.rating %>
        <br>
        <%= link_to "Delete",
        review_path(review),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
        %>
      </li>
      <% end %>
    </ul>
  <br>
<div class="container m-4 p-3 d-flex justify-content-between" >
  <%= link_to "Edit this restaurant", edit_restaurant_path(@restaurant) %> |
  <%= link_to "Back to restaurants", restaurants_path %>
  <%= button_to "Destroy this restaurant", @restaurant, method: :delete %>
</div>
</div>
